<UserControl
    x:Class="BalloonShop.UserControls.CategoryCartElement_Button"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Name="categoryCartElement_Button">

    <Button
        Width="230"
        Margin="15,0"
        Padding="20"
        Click="Button_Click"
        FocusVisualStyle="{x:Null}"
        Style="{StaticResource categoryButton}">
        <StackPanel VerticalAlignment="Center">
            <Image
                Width="200"
                Height="200"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="{Binding ElementName=categoryCartElement_Button, Path=ImageBitmap}" />

            <TextBlock
                Margin="0,30,0,0"
                FontSize="18"
                FontWeight="SemiBold"
                Text="{Binding ElementName=categoryCartElement_Button, Path=Title}"
                TextAlignment="Center" />
        </StackPanel>
    </Button>
</UserControl>
