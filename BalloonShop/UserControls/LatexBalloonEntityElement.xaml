<UserControl
    x:Class="BalloonShop.UserControls.LatexBalloonEntityElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Name="latexBalloonEntityElement">

    <Border
        Width="230"
        Height="350"
        Margin="15,0"
        Padding="20"
        BorderBrush="{StaticResource backColor1}"
        BorderThickness="1"
        CornerRadius="10"
        FocusVisualStyle="{x:Null}">

        <StackPanel VerticalAlignment="Center">
            <Image
                Width="200"
                Height="200"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="{Binding ElementName=balloonTypeElement, Path=ImageBitmap}" />

            <TextBlock
                Margin="0,30,0,0"
                FontSize="18"
                FontWeight="SemiBold"
                Style="{StaticResource simpleText}"
                Text="{Binding ElementName=balloonTypeElement, Path=BalloonName}"
                TextAlignment="Center" />

        </StackPanel>
    </Border>
</UserControl>
