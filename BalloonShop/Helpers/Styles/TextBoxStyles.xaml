<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--#region Property value-->
    <Style x:Key="propertyValueTextBox" TargetType="TextBox">
        <Setter Property="Margin" Value="10,5,20,5"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Foreground" Value="{StaticResource fontColor1}"/>
        <Setter Property="FontFamily" Value="Montserrat"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource fontColor1}"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <!--#endregion-->
    
</ResourceDictionary>