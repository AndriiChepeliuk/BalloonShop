<UserControl x:Class="BalloonShop.Pages.LatexBalloons_Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:uc="clr-namespace:BalloonShop.UserControls">

    <Grid Margin="20" x:Name="grid">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0 20" VerticalAlignment="Center" Width="{Binding ElementName=grid,Path=ActualWidth}">
            <WrapPanel>

                <uc:CategoryElement Title="Без малюнка" ImageSource="\Data\MenuImages\LatexBalloons\Латексні_без_малюнку_оригінал.png" Margin="0 10" ElementClick="LatexBalloons_WithoutImage_Page_ElementClick"/>
                <uc:CategoryElement Title="З малюнком" ImageSource="\Data\MenuImages\LatexBalloons\Латексні_з_малюнком_оригінал.png" Margin="0 10" ElementClick="LatexBalloons_WithImages_Page_ElementClick"/>
                <uc:CategoryElement Title="Набори кульок" ImageSource="\Data\MenuImages\LatexBalloons\Набори_кульок_оригінал.png" Margin="0 10" ElementClick="LatexBalloons_SetsOfBalloons_Page_ElementClick"/>
                <uc:CategoryElement Title="Серця" ImageSource="\Data\MenuImages\LatexBalloons\Латексні_серця_оригінал.png" Margin="0 10" ElementClick="LatexBalloons_Hearts_Page_ElementClick"/>

            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
