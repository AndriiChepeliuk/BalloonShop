<UserControl
    x:Class="BalloonShop.Pages.Settings_BalloonsTypes_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BalloonShop.Pages"
    xmlns:viewModel="clr-namespace:BalloonShop.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewModel:Settings_BalloonsTypes_ViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Source="\Images\Temp\balloon-range.jpg" />

        <Button
            Name="addColorButton"
            Grid.Row="1"
            HorizontalAlignment="Right"
            Command="{Binding AddNewBalloonTypeCommand}"
            Style="{StaticResource addButton_Circle}">
            <Image Source="\Data\Icons\ButtonsIcons\icons8-add-button-96.png" />
        </Button>
    </Grid>
</UserControl>
