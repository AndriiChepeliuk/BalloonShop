<UserControl x:Class="BalloonShop.Pages.Settings_ColorSettings_Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BalloonShop.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <Image Grid.Row="0" Source="\Images\Temp\colors-theme-settings.png"/>

        <Button Name="addColorButton" Grid.Row="1" HorizontalAlignment="Right" Style="{StaticResource addButton_Circle}" Click="addColorButton_Click">
                <Image Source="\Data\Icons\ButtonsIcons\icons8-add-button-96.png"/>
        </Button>
    </Grid>
</UserControl>
