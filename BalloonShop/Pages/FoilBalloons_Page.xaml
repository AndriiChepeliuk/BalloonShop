                <uc:CategoryElement Title="Цифри" ImageSource="\Data\MenuImages\FoilBalloons\Фольга_цифри_оригінал.png" Margin="0 10"/>
                <uc:CategoryElement Title="Стоячі фігури" ImageSource="\Data\MenuImages\FoilBalloons\Фольга_стоячі-фігури_оригінал.png" Margin="0 10"/>
